<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/player_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/goals"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="100dp"
        android:layout_height="@dimen/game_player_item_height"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="somebody"
        android:textSize="@dimen/game_player_item_textSize" />

    <TextView
        android:id="@+id/player_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/game_player_item_height"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="12"
        android:textSize="@dimen/game_player_item_textSize" />

</LinearLayout>