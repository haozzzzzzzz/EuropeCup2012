<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/game_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/game_player_list_title_vertical_margin"
        android:paddingBottom="@dimen/game_player_list_title_vertical_margin"
        android:text="Ukraine 2 : 1 Sweden" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/game_home_playerlistView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1" >
        </ListView>

        <ListView
            android:id="@+id/game_away_playerlistView"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1" >
        </ListView>
    </LinearLayout>

</LinearLayout>